NAME = postscriptbarcode

SWIG_INTERFACE = ../$(NAME).i

SWIG_WRAP  = $(NAME)_wrap.c
SWIG_EXTRA = $(NAME).py

PYTHON_MAKEFILE     = setup.py
PYTHON_OUT = _$(NAME).so

ifeq ($(PACKAGING),DEB)
  INSTALL_OPTS=--root $(PACKAGING_ROOT)/debian/python-postscriptbarcode --install-layout=deb
endif

cleanlist += $(SWIG_WRAP) $(SWIG_EXTRA) *.pyc 

.PHONY: all swig-python install uninstall clean

all: swig-python

swig-python: $(PYTHON_OUT)

$(PYTHON_OUT): $(PYTHON_MAKEFILE) $(SWIG_WRAP)
	python $< build_ext

$(SWIG_WRAP) $(SWIG_EXTRA):
	swig -Wall -python -o $(SWIG_WRAP) -outdir . $(SWIG_INTERFACE)

install: $(PYTHON_MAKEFILE) $(PYTHON_OUT)
	python $< install $(INSTALL_OPTS)

uninstall: $(PYTHON_MAKEFILE)
	python $< uninstall

clean:
	python $(PYTHON_MAKEFILE) clean --all
	$(RM) $(cleanlist) *.pyc

